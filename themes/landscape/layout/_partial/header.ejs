<header id="header">
  <div id="header-outer">
    <div class="header-row">
      <div class="main-title">
        <h1>
          <a href="<%- url_for() %>" id="logo"><%- config.title %></a>
        </h1>
        <% if (theme.subtitle) { %>
          <img class="kronan-logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/OFlag.svg/100px-OFlag.svg.png">
          <h2 class="subtitle-wrap">
            <a href="<%- url_for() %>" class="subtitle"><%= theme.subtitle %></a>
          </h2>
        <% } %>
      </div>

      <nav class="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= __(`menu.${i}`) %></a>
        <% } %>
      </nav>
      <div style="clear: both"></div>
    </div>

    <div class="banner-wrap">
      <div class="banner"></div>
    </div>
  </div>
</header>
